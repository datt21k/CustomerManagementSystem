@model CustomerManagementSystem.ViewModels.CustomerViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h1>Customer Details</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Occupation)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Occupation)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Company)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Company)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6>Address</h6>
                            <address>
                                @Html.DisplayFor(model => model.StreetAddress)<br />
                                @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.PostalCode)<br />
                                @Html.DisplayFor(model => model.Country)
                            </address>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <small class="text-muted">
                                Created: @Model.CreatedAt.ToString("g")<br />
                                @if (Model.UpdatedAt.HasValue)
                                {
                                    <span>Last Updated: @Model.UpdatedAt.Value.ToString("g")</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
