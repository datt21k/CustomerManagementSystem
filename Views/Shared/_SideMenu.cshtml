@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<div class="sidebar">
    <div class="sidebar-header">
        <h3>Menu</h3>
    </div>
    <ul class="sidebar-menu">
        <li class="@(currentController == "Customer" ? "active" : "")">
            <a asp-controller="Customer" asp-action="Index">
                <i class="bi bi-people"></i> Customer List
            </a>
        </li>
        <li class="@(currentController == "Settings" ? "active" : "")">
            <a asp-controller="Home" asp-action="Settings">
                <i class="bi bi-gear"></i> Settings
            </a>
        </li>
    </ul>
</div>